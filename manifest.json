{
  "manifest_version": 3,
  "name": "Turbo Watch",
  "version": "1.0",
  "description": "Control HTML5 video speed from 0.1x to 10x with a slider.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
